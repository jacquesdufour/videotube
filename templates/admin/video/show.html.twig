{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>LikeCounter</th>
                <td>{{ video.likeCounter }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ video.publishedAt ? video.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_video_index') }}" class="btn btn-secondary">Back to list</a>

    <a href="{{ path('admin_video_edit', {'id': video.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('admin/video/_delete_form.html.twig') }}
{% endblock %}
